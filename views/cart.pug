extends layout

block content
  - total = 0
  table.table
            thead
                  tr
                    th Product Name
                    th Product Price
                    th Action
            tbody
                each item in cart
                  - total += Number(item.price)
                  tr
                    td=item.name
                    td=item.price
                    td
                      a(href="/products/cart/delete/"+item._id,  class="btn btn-danger mr-1 ") Remove From Cart
            tfoot
                tr
                 td Total
                 td=total
                      
              
     
